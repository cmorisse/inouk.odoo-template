[options]
addons_path = /opt/odoo/odoo_src/addons,/opt/odoo/project_addons,/opt/odoo/extra_addons
admin_passwd = {{ default .Env.ADMIN_PASSWORD "" }}
data_dir = /var/lib/odoo
db_host = {{ default .Env.DB_HOST "False" }}
db_name = {{ default .Env.DB_NAME "False" }}
db_user = {{ default .Env.DB_USER "odoo" }}
db_password = {{ default .Env.DB_PASSWORD "odoo" }}
db_sslmode = {{ default .Env.DB_SSLMODE "prefer" }}
dbfilter = {{ default .Env.DB_FILTER ".*" }}$
db_maxconn = {{ default .Env.DB_MAXCONN "64" }}
; db_template = template1
list_db = {{ default .Env.LIST_DB "True" }}
workers = {{ default .Env.WORKERS "0" }}
limit_memory_soft = {{ default .Env.LIMIT_MEMORY_SOFT "2147483648" }}
limit_memory_hard = {{ default .Env.LIMIT_MEMORY_HARD "2684354560" }}
limit_request = {{ default .Env.LIMIT_REQUEST "8192" }}
limit_time_cpu = {{ default .Env.LIMIT_TIME_CPU "60" }}
limit_time_real = {{ default .Env.LIMIT_TIME_REAL "120" }}
max_cron_threads = {{ default .Env.MAX_CRON_THREADS "0" }}
limit_time_real_cron = {{ default .Env.LIMIT_TIME_REAL_CRON "240" }}
logfile = {{ default .Env.LOGFILE "None" }}
log_handler = {{ default .Env.LOG_HANDLER "':INFO'" }}
log_level = {{ default .Env.LOG_LEVEL "info" }}
log_db = {{ default .Env.LOG_DB "False" }}
logrotate = True
syslog = {{ default .Env.SYSLOG "False" }}
without_demo = {{ default .Env.WITHOUT_DEMO "True" }}
server_wide_modules = {{ default .Env.SERVER_WIDE_MODULES "" }}
proxy_mode = True
; http_enable = True
; longpolling_port = 8072
http_port = {{ default .Env.LOGFILE "8069" }}
; http_interface =
debug_mode = {{ default .Env.DEBUG_MODE "True" }}
email_from = {{ default .Env.EMAIL_FROM "False" }}
; csv_internal_sep = ,
; osv_memory_age_limit = 1.0
; osv_memory_count_limit = False
; smtp_password = False
; smtp_port = 25
; smtp_server = localhost
; smtp_ssl = False
; smtp_user = False
